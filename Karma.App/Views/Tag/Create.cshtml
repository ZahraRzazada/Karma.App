@model TagPostDto
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<form method="post" action="create">
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="Name" for="exampleInputEmail1" class="form-label"></label>
        <input type="text" asp-for="@Model.Name"class="form-control"  aria-describedby="emailHelp">
        <span class="text text-danger" asp-validation-for="@Model.Name"></span>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-primary">Submit</button>
</form>